<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.londoncentralmosque.WellcomeActivity">



    <include
        android:layout_width="match_parent"
        android:layout_height="90dp"
        layout="@layout/app_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="#005451"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="wellcome"
                    android:background="#fff"
                    android:src="@drawable/home1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOME"
                    android:onClick="wellcome"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="18dp"
                    android:textStyle="bold"
                    android:textColor="#005451"
                    android:background="#fff"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="about"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:src="@drawable/mosque" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="ABOUT US"
                    android:onClick="about"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:textStyle="bold"
                    android:textColor="#005451"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="departmentLink"
                    android:background="#fff"
                    android:src="@drawable/department12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="departmentLink"
                    android:text="DEPARTMENTS"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#005451"
                    android:background="#fff"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="newsLink"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:src="@drawable/news12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="newsLink"
                    android:text="NEWS"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:textStyle="bold"
                    android:textColor="#005451"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="eventLink"

                    android:background="#fff"
                    android:src="@drawable/event12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EVENTS"
                    android:onClick="eventLink"
                    android:background="#fff"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    android:textColor="#005451"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/prayer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="donate"
                    android:background="#fff"
                    android:src="@drawable/minar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="donate"
                    android:text="Prayer Times"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="#005451"
                    android:layout_marginLeft="15dp"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="contact"
                    android:background="#fff"
                    android:src="@drawable/contact12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textAllCaps="true"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    android:onClick="contact"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#005451"/>
            </LinearLayout>






        </LinearLayout>


    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/footer" />
</LinearLayout>

